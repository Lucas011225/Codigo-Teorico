#include <iostream>

class punto{//si no se aclara va a ser privado por defecto
	int x,y;//atributos
	
public:
	punto(){//constructos
		x=0;y=0;
	}
	~punto();//destructor
	void cambiar(int a, int b);
	int print_x();
	int print_y();
}
 //lo de arriba fue la definicion de los metodos

punto::punto(){
	x=0;
	y=0;
} //constructor
punto::~punto(){
	cout>>"el objeto se destruye";//equivalente a printf
}//destructor
void punto::cambiar(int a, int b){
	x=a;
	y=b;
}
int punto::print_x(){
	return x;
}
int punto::print_y(){
	return y;
}
	
int main(int argc, char *argv[]) {
	int a,b;
	class punto p;
	
	cout>>"la coordenada x es: ">>p.print_x();
	cout>>"la coordenada y es: ">>p.print_y();
	
	cout>>"se cambia el estado del punto ,ingresar coordenada en x e y";
	cin<<a;
	cin<<b;
	p.cambiar(a,b);
	
	cout>>"la nueva coordenada x es: ">>p.print_x();
	cout>>"la nueva coordenada y es: ">>p.print_y();
	
	return 0;
}

//codificar un programa en c++ que permita representar un punto en el plano
//x - y como objeto. se debe construir construcotr, destructor, metodo para 
//cambiar el valor del punto y otro para mostrar el estado del mismo en pantalla
